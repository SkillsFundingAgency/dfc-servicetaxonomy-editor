<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Admin.Abstractions" Version="1.0.0" />
    <PackageReference Include="OrchardCore.Apis.GraphQL.Abstractions" Version="1.0.0" />
    <PackageReference Include="OrchardCore.ContentManagement.Abstractions" Version="1.0.0" />
    <PackageReference Include="OrchardCore.ContentManagement.GraphQL" Version="1.0.0" />
    <PackageReference Include="OrchardCore.ContentManagement" Version="1.0.0" />
    <PackageReference Include="OrchardCore.Contents.Core" Version="1.0.0" />
    <PackageReference Include="OrchardCore.ContentTypes.Abstractions" Version="1.0.0" />
    <PackageReference Include="OrchardCore.Data.Abstractions" Version="1.0.0" />
    <PackageReference Include="OrchardCore.DisplayManagement" Version="1.0.0" />
    <PackageReference Include="OrchardCore.Indexing.Abstractions" Version="1.0.0" />
    <PackageReference Include="OrchardCore.Infrastructure" Version="1.0.0" />
    <PackageReference Include="OrchardCore.Liquid.Abstractions" Version="1.0.0" />
    <PackageReference Include="OrchardCore.Module.Targets" Version="1.0.0" />
    <PackageReference Include="OrchardCore.Navigation.Core" Version="1.0.0" />
    <PackageReference Include="OrchardCore.ResourceManagement" Version="1.0.0" />
    <PackageReference Include="OrchardCore.Settings.Core" Version="1.0.0" />
    <PackageReference Include="Fluid.Core" Version="2.0.13" />
  </ItemGroup>

</Project>
