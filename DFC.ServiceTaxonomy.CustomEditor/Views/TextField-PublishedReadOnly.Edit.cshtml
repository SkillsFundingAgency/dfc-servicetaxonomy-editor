@model OrchardCore.ContentFields.ViewModels.EditTextFieldViewModel

@{
    var settings = Model.PartFieldDefinition.GetSettings<TextFieldSettings>();
    var readOnly = !string.IsNullOrWhiteSpace(Model.Text) && Model.Part.ContentItem.PublishedUtc.HasValue;
}

<div class="form-group">
    <label asp-for="Text">@Model.PartFieldDefinition.DisplayName()</label>
    @if(readOnly)
    {
    <input asp-for="Text" class="form-control content-preview-text" type="text" readonly />
    }
    else
    {
    <input asp-for="Text" class="form-control content-preview-text" type="text" />
    }
    @if (!String.IsNullOrEmpty(settings.Hint))
    {
        <span class="hint">@settings.Hint</span>
    }
</div>
