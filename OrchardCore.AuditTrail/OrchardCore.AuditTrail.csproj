<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Admin.Abstractions" Version="1.0.0-rc11" />
    <PackageReference Include="OrchardCore.ContentManagement" Version="1.0.0-rc11" />
    <PackageReference Include="OrchardCore.Contents.Core" Version="1.0.0-rc11" />
    <PackageReference Include="OrchardCore.Contents.TagHelpers" Version="1.0.0-rc11" />
    <PackageReference Include="OrchardCore.ContentTypes.Abstractions" Version="1.0.0-rc11" />
    <PackageReference Include="OrchardCore.Module.Targets" Version="1.0.0-rc11" />
    <PackageReference Include="OrchardCore.Navigation.Core" Version="1.0.0-rc11" />
    <PackageReference Include="OrchardCore.ResourceManagement" Version="1.0.0-rc11" />
    <PackageReference Include="OrchardCore.Settings.Core" Version="1.0.0-rc11" />
    <PackageReference Include="OrchardCore.Users.Core" Version="1.0.0-rc11" />
  </ItemGroup>

</Project>
