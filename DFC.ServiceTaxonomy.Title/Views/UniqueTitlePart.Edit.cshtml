@model DFC.ServiceTaxonomy.Title.ViewModels.UniqueTitlePartViewModel
@{
    var readOnly = !string.IsNullOrWhiteSpace(Model.Title) && Model.ReadOnlyOnPublish && Model.UniqueTitlePart.ContentItem.PublishedUtc.HasValue;
    var placeholderText = string.IsNullOrWhiteSpace(Model.Placeholder) ? string.Empty : $"eg - {Model.Placeholder}";
}

<style asp-name="test" asp-src="~/DFC.ServiceTaxonomy.Title/Styles/titles.min.css" debug-src="~/DFC.ServiceTaxonomy.Title/Styles/titles.css"></style>

<div class="form-group" asp-validation-class-for="Title">
    <div class="w-md-75 w-xl-50 pe-md-3">
        <label asp-for="Title">Title</label>
        @if(readOnly)
        {
        <input asp-for="Title" class="form-control text-muted" type="text" readonly />
        }
        else
        {
        <input asp-for="Title" class="form-control text-muted" placeholder="@placeholderText" />
        }
        @if (!string.IsNullOrEmpty(Model.Hint))
        {
            <span class="hint">@Model.Hint</span>
        }
    </div>
</div>
