<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <Nullable>enable</Nullable>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Infrastructure" Version="1.0.0-rc6" />
    <PackageReference Include="OrchardCore.Theme.Targets" Version="1.0.0-rc6" />
    <PackageReference Include="OrchardCore.ContentManagement" Version="1.0.0-rc6" />
    <PackageReference Include="OrchardCore.ContentManagement.Abstractions" Version="1.0.0-rc6" />
    <PackageReference Include="OrchardCore.DisplayManagement" Version="1.0.0-rc6" />
    <PackageReference Include="OrchardCore.ResourceManagement" Version="1.0.0-rc6" />
    <PackageReference Include="SonarAnalyzer.CSharp" Version="8.14.0.22654">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
