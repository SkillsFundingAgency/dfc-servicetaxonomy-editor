@model ContentApprovalDashboardPartViewModel



@{
    switch (Model.Card)
    {
        case DashboardItemsStatusCard.InDraft:
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">
                <i class="fas fa-pencil-alt"></i>
                <h1 class="display-1">@(Model.NumberOfContentItemsInState)</h1>
                <span>In Draft</span>
            </a>
            break;
        case DashboardItemsStatusCard.WaitingForReview:
            <i class="far fa-hourglass"></i>
            <h1 class="display-1">@(Model.NumberOfContentItemsInState)</h1>
            <span>Waiting For Review</span>
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">Content Design</a>
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">SME</a>
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">Stakeholder</a>
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">UX</a>
            break;
        case DashboardItemsStatusCard.InReview:
            <i class="fas fa-search"></i>
            <h1 class="display-1">@(Model.NumberOfContentItemsInState)</h1>
            <span>In Review</span>
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">Content Design</a>
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">SME</a>
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">Stakeholder</a>
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">UX</a>
            break;
        case DashboardItemsStatusCard.Published:
            <a asp-route-area="OrchardCore.Contents" asp-controller="@(typeof(OrchardCore.Contents.Controllers.AdminController).ControllerName())" asp-action="List">
                <i class="far fa-check-circle"></i>
                <h1 class="display-1">@(Model.NumberOfContentItemsInState)</h1>
                <span>Published</span>
            </a>
            break;
    }
}

