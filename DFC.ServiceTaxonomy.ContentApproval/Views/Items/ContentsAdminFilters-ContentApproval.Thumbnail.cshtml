@model ShapeViewModel<ContentOptionsViewModel>
@{
    var term = Model.Value.FilterResult.FirstOrDefault(x => x.TermName == "reviewstatus");
}

<h4 class="card-title">Content approval</h4>
<pre class="mb-3">@(@term != null ? @term.ToString() : "reviewstatus:...")</pre>
<p>@T["Filters on a content items content approval review status."]</p>
<div class="d-block text-right">
    <span>
        <i class="fas fa-sm fa-minus text-primary" aria-hidden="true"></i>
    </span>
</div>
