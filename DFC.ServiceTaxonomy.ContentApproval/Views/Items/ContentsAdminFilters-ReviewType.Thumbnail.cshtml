@model ShapeViewModel<ContentOptionsViewModel>
@{
    var term = Model.Value.FilterResult.FirstOrDefault(x => x.TermName == "reviewtype");
}

<h4 class="card-title">Review type</h4>
<pre class="mb-3">@(@term != null ? @term.ToString() : "reviewtype:...")</pre>
<p>@T["Filters on the content approval reviewer type."]</p>
<div class="d-block text-right">
    <span>
        <i class="fas fa-sm fa-minus text-primary" aria-hidden="true"></i>
    </span>
</div>
