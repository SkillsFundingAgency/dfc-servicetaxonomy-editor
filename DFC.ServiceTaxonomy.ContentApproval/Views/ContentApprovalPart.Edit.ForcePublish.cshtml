@model DFC.ServiceTaxonomy.ContentApproval.ViewModels.ContentApprovalPartViewModel

<div class="btn-group">
    <button class="btn btn-success dropdown-toggle" id="forcepublishbutton" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@T["Force publish"]</button>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="forcepublishbutton">
        <div class="content-approval-review-type-header">Select review type:</div>
        @foreach (var reviewType in Model.ReviewTypes)
        {
            <button class="dropdown-item" type="submit" name="@Constants.SubmitPublishKey" value="@(Constants.SubmitRequestApprovalValuePrefix + reviewType.Key)">@T[reviewType.Value]</button>
        }
    </div>
</div>
