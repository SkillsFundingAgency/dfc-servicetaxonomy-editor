@using Microsoft.AspNetCore.Authorization
@model UnpublishLaterPartViewModel

@inject IAuthorizationService AuthorizationService

<style asp-src="~/OrchardCore.PublishLater/Styles/publish-later.min.css" debug-src="~/OrchardCore.PublishLater/Styles/publish-later.css"></style>

@if (await AuthorizationService.AuthorizeAsync(User, OrchardCore.Contents.CommonPermissions.PublishContent, Model.ContentItem) && Model.ContentItem!.Latest && Model.ContentItem.Published)
{
    <div class="btn-group">
        <input asp-for="ScheduledUnpublishLocalDateTime" type="datetime-local" class="form-control content-preview-select" />
        <button class="btn btn-primary btn-unpublish-later" type="submit" name="submit.Publish" value="submit.UnpublishLater">@T["Unpublish Later"]</button>
    </div>
    @if (Model.ScheduledUnpublishUtc.HasValue)
    {
        <div class="btn-group">
            <button class="btn btn-primary btn-unpublish-later" type="submit" name="submit.Publish" value="submit.CancelUnpublishLater">@T["Cancel Unpublish Later"]</button>
        </div>
    }
}
